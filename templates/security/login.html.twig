{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<h2 class="col-5 mx-auto mb-5 mt-2">Connexion</h2>

<div class="container">
    <div class="col-6 mx-auto">
        {% if error %}
            <div class="d-inline-flex p-2 mb-3">
                <small class="text-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</small>
            </div>    
        {% endif %}
        <form class="form-login" action="{{ path('login') }}" method="post">
            <div class="form-group mb-4">
                <input type="email" class="form-control" name="_username" id="email" value="{{ username }}" placeholder="Entrez votre email">
            </div>
            <div class="form-group mb-3">
                <input type="password" class="form-control" name="_password" id="password" placeholder="Password">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="checkbox mb-3">
                <label>
                <input type="checkbox" name="_remember_me" checked> Se souvenir de moi
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>

</div>
{% endblock %}
